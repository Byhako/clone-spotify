---
import Time from '@/icons/Time.astro'
import type { Song } from '@/lib/data'

interface Props {
  songs: Song[]
}

const { songs } = Astro.props
---

<table class="table-auto text-left min-w-full divide-y divide-gray-500/30 mt-10">
  <thead class="mb-[50px]">
    <tr class="text-gray-300 text-sm font-light">
      <th class="px-4 py-2">#</th>
      <th class="px-4 py-2">Título</th>
      <th class="px-4 py-2">Álbun</th>
      <th class="px-4 py-2"><Time /></th>
    </tr>
  </thead>

  <tbody>
    <tr class="h-[16px]"></tr>
    {songs.map((song, idx) => (
      <tr class="text-gray-400 text-sm font-light hover:bg-white/10 rounded-lg cursor-pointer overflow-hidden transition duration-300">
        <td class="px-4 py-2 w-7 rounded-tl-lg rounded-bl-lg">{idx + 1}</td>
        <td class="px-4 py-2 flex gap-3">
          <picture class="w-11 h-11">
            <img src={song.image} alt={song.title} />
          </picture>
          <div class="flex flex-col">
            <h3 class="text-white text-base font-normal">{song.title}</h3>
            <span>{song.artists.join(', ')}</span>
          </div>
        </td>
        <td class="px-4 py-2">{song.album}</td>
        <td class="px-4 py-2 rounded-tr-lg rounded-br-lg">{song.duration}</td>
      </tr>
    ))}
  </tbody>

</table>